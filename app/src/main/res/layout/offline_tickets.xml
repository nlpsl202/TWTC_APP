<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/offline_ticket_background">

    <RadioGroup
        android:id="@+id/InOutRG"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp">

        <RadioButton
            android:id="@+id/InRBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入場"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"/>

        <RadioButton
            android:id="@+id/OutRBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出場"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"/>

    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/offline_ticket_data"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/ResultTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/FailedLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/failedImage"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ticket_failed" />

                <TextView
                    android:id="@+id/ResultTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ReturnLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/offline_ticket_bottom_bar">

        <Button
            android:id="@+id/ReturnBtn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/lastpage_btn_selector"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/HomeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/home_btn_selector"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/NextBtn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/nextpage_btn_selector"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"/>

    </RelativeLayout>

</RelativeLayout>