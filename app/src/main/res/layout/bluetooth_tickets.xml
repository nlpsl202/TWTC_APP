<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetooth_ticket_background">

    <RadioGroup
        android:id="@+id/InOutRG"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/InRBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="入場"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/OutRBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="出場"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="730px"
        android:layout_height="646px"
        android:orientation="vertical"
        android:background="@drawable/data_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp">

        <LinearLayout
            android:id="@+id/wifiLayout"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/ResultTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/FailedLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/failedImage"
                    android:layout_width="245.7px"
                    android:layout_height="66.4px"
                    android:src="@drawable/ticket_failed" />

                <TextView
                    android:id="@+id/ResultTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:layout_marginTop="10dp"
                    android:textSize="23dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rfidLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/FtPhotoImage"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="left|center"
                android:padding="1dp"
                android:background="@drawable/image_border"/>

            <TextView
                android:id="@+id/ResultTxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right|center"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ReturnLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background">

        <Button
            android:id="@+id/ReturnBtn"
            android:layout_width="208px"
            android:layout_height="73px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30.5px"
            android:background="@drawable/lastpage_btn_selector" />

        <Button
            android:id="@+id/NextBtn"
            android:layout_width="208px"
            android:layout_height="73px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30.5px"
            android:background="@drawable/nextpage_btn_selector" />

    </RelativeLayout>

    <Button
        android:id="@+id/HomeBtn"
        android:layout_width="159px"
        android:layout_height="159px"
        android:background="@drawable/home_btn_selector"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>