<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/connect_setting_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="139.3px">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_machineid_text" />

        </LinearLayout>

        <EditText
            android:id="@+id/MachineID_et"
            android:layout_width="502px"
            android:layout_height="117px"
            android:background="@drawable/connect_setting_edittext"
            android:paddingLeft="20dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_ip_text" />

        </LinearLayout>

        <EditText
            android:id="@+id/IP_et"
            android:layout_width="502px"
            android:layout_height="117px"
            android:background="@drawable/connect_setting_edittext"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_sqlaccount_text"/>

        </LinearLayout>

        <EditText
            android:id="@+id/SqlAccount_et"
            android:layout_width="502px"
            android:layout_height="117px"
            android:background="@drawable/connect_setting_edittext"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_sqlpassword_text"/>

        </LinearLayout>

        <EditText
            android:id="@+id/SqlPassword_et"
            android:layout_width="502px"
            android:layout_height="117px"
            android:background="@drawable/connect_setting_edittext"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_password_text"/>

        </LinearLayout>

        <EditText
            android:id="@+id/Password_et"
            android:layout_width="502px"
            android:layout_height="117px"
            android:background="@drawable/connect_setting_edittext"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/textView6"
                android:layout_width="150px"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_inout_text"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="180px"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:background="@drawable/connect_setting_rfid_text" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/RFID_cb"
            android:layout_width="208px"
            android:layout_height="66px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/checkbox_selector"
            android:layout_marginLeft="10dp"
            android:button="@null" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_marginTop="42.6px">

        <Button
            android:id="@+id/Confirm_btn"
            android:layout_width="262.8px"
            android:layout_height="98.8px"
            android:background="@drawable/connect_setting_yes_btn_selector"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/Return_btn"
            android:layout_width="262.8px"
            android:layout_height="98.8px"
            android:background="@drawable/connect_setting_no_btn_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

</LinearLayout>